{
  "data_dir": "{{ consul_data_dir }}",
{% if consul_server %}
  "bootstrap_expect": {{ consul_bootstrap_expect }},
{% endif %}
{% if consul_server and consul_start_join %}
  "start_join": [
{% for node_address in consul_start_join %}
{% if not loop.last %}
    "{{ node_address }}",
{% else %}
    "{{ node_address }}"
{% endif %}
{% endfor %}
  ],
{% endif %}
{% if consul_webui %}
  "ui_dir": "{{ consul_webui_install_dir }}/dist",
{% endif %}
{% if consul_server %}
  "server": true
{% else %}
  "server": false
{% endif %}
}
